<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bg2"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_edittext"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/loginText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="Reservar vaga"
                android:textAlignment="center"
                android:textColor="@color/titulo"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtPlacaVeiculo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/custom_edittext"
                android:hint="Placa do veículo"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtCidade"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/custom_edittext"
                android:hint="Cidade"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtEstado"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/custom_edittext"
                android:hint="Estado"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtRua"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/custom_edittext"
                android:hint="Rua"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtNumero"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/custom_edittext"
                android:hint="Número"
                android:inputType="number"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <!-- Novo RadioGroup -->

            <RadioGroup
                android:id="@+id/radioGroupDuracao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <!-- 30 Minutos -->
                <RadioButton
                    android:id="@+id/radio30Min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30 Minutos" />

                <!-- 01 Hora -->
                <TextView
                    android:id="@+id/preco30Min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:gravity="center_vertical"
                    android:text="R$ 5,00"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/radio1Hora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01 Hora" />

                <TextView
                    android:id="@+id/preco1Hora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:gravity="center_vertical"
                    android:text="R$ 10,00"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <!-- 02 Horas -->
                <RadioButton
                    android:id="@+id/radio2Horas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="02 Horas" />

                <TextView
                    android:id="@+id/preco2Horas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:gravity="center_vertical"
                    android:text="R$ 15,00"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </RadioGroup>

            <Button
                android:id="@+id/btnCadastro"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/titulo"
                android:text="Criar Reserva"
                android:textSize="16sp"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/btnSair"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/purple"
                android:text="Sair"
                android:textSize="14sp" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" /> <!-- Oculto inicialmente -->

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_edittext"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/loginText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="Reservar vaga"
                android:textAlignment="center"
                android:textColor="@color/titulo"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtNome"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/custom_edittext"
                android:hint="Nome"
                android:textSize="14sp"
                android:padding="8dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/edtTel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/custom_edittext"
                android:hint="Telefone"
                android:inputType="phone"
                android:textSize="14sp"
                android:padding="8dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/edtData"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/custom_edittext"
                android:hint="Data"
                android:inputType="date"
                android:textSize="14sp"
                android:padding="8dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/edtPlacaVeiculo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/custom_edittext"
                android:hint="Placa do veículo"
                android:textSize="14sp"
                android:padding="8dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/edtCidade"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/custom_edittext"
                android:hint="Cidade"
                android:textSize="14sp"
                android:padding="8dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/edtEstado"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/custom_edittext"
                android:hint="Estado"
                android:textSize="14sp"
                android:padding="8dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/edtNumero"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/custom_edittext"
                android:hint="Número"
                android:inputType="number"
                android:textSize="14sp"
                android:padding="8dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/edtRua"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/custom_edittext"
                android:hint="Rua"
                android:textSize="14sp"
                android:padding="8dp"
                android:textColor="@color/black" />


            <Button
                android:id="@+id/btnCadastro"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/titulo"
                android:text="Criar Reserva"
                android:textSize="16sp"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/btnSair"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:text="Sair"
                android:textSize="14sp"
                android:backgroundTint="@color/purple" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>

            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.CadastroActivity" />

        <activity android:name=".view.AdminListaActivity" />
        <activity android:name=".view.AdminBotoesActivity" />
        <activity android:name=".view.AdminFormActivity" />

        <activity android:name=".view.MotoristaListaActivity" />
